<%= form_with(model: event, local: true) do |form| %>
  <% if event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name, id: :event_name %>
  </div>

  <div class="field">
    <%= form.label :date %>
    <%= form.text_field :date, id: :event_date %>
  </div>

  <div class="field">
    <%= form.label :type %>
    <%= form.text_field :event_type, id: :event_type %>
  </div>

  <div class="field">
    <%= form.label :place %>
    <%= form.text_field :place, id: :event_place %>
  </div>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_field :description, id: :event_description %>
  </div>

  <div class="field">
    <%= form.label :organizer %>
    <%= form.text_field :organizer, id: :event_organizer %>
  </div>

  <div class="field">
    <%= form.label :image %>
    <%= form.text_field :image, id: :event_image %>
  </div>
  <div class="field">
    <%= form.label :ngo %>
    <%= form.select :ngo_id, Ngo.all.map{|n| [n.name, n.id]} %>
  </div>
  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
